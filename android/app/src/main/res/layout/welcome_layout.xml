<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/welcome_toolbar"
        style="@style/CronetSample.TextAppearance.Title"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/cronetsample_primary"
        android:elevation="@dimen/elevation_header"
        android:title="@string/welcome_activity">

        <TextView
            android:id="@+id/welcome_title"
            style="@style/CronetSample.TextAppearance.Title.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation_header"
            android:gravity="center_vertical"
            android:minHeight="@dimen/min_height_introduction"
            android:padding="@dimen/spacing_double" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cronet_load_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/elevation_header"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_double" />

            <Button
                android:id="@+id/images_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openImages"
                android:padding="@dimen/spacing_double"
                android:text="@string/load_images" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>